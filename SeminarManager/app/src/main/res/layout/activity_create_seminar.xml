<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.createseminar.CreateSeminarActivity">

        <LinearLayout
            android:id="@+id/create_seminar_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/create_seminar_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="name"
                android:inputType="text" />
            <EditText
                android:id="@+id/create_seminar_capacity"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="capacity"
                android:inputType="number" />
            <EditText
                android:id="@+id/create_seminar_count"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="count"
                android:inputType="number" />
            <EditText
                android:id="@+id/create_seminar_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="time"
                android:inputType="time" />
            <EditText
                android:id="@+id/create_seminar_online"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="online"
                android:inputType="text" />
        </LinearLayout>

        <Button
            android:id="@+id/create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/create_seminar_form_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="create" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>